{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
    "lib": ["ES6"],
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
  },
  "include": ["src/**/*.ts", "tests/**/*.test.ts"]
}
